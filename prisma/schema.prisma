// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // License & Role Management
  role          Role      @default(USER)
  isActivated   Boolean   @default(false)
  isBanned      Boolean   @default(false)
  banReason     String?   // Banlanma sebebini tutacak opsiyonel metin alanı
  
  // Onboarding & Preferences
  hasCompletedOnboarding Boolean   @default(false)
  uygulamaGrubu         String?
  anatomiGrubu          String?
  yemekhaneEklensin     Boolean   @default(false)
  classYear             Int?
  language              Language?
  hasYearlySynced       Boolean   @default(false)  // Yıllık senkronizasyon yapıldı mı?
  
  // Relation to the license key they used
  activatedKey  LicenseKey?
  
  // Relation to course preferences
  courseSubscriptions UserCourseSubscription[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text // Encrypted refresh token
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  refresh_token_expires_in Int?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model LicenseKey {
  id        String   @id // Custom 'TAK-...' string
  createdAt DateTime @default(now())
  isUsed    Boolean  @default(false)
  
  // Relation to the user who activated this key
  activatedByUserId String?  @unique
  activatedByUser   User?    @relation(fields: [activatedByUserId], references: [id])
}

// Available courses for users to subscribe to
model Course {
  id    String @id @default(cuid())
  name  String @unique // e.g., "Fizyoloji", "Anatomi", "Histoloji"
  
  userSubscriptions UserCourseSubscription[]
}

// Join table for user course preferences
model UserCourseSubscription {
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId   String
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  notifications  Boolean  @default(true)
  addToCalendar  Boolean  @default(true)
  
  @@id([userId, courseId])
}

enum Role {
  USER
  ADMIN
}

// FOR FUTURE USE
enum Language {
  TR
  EN
}
