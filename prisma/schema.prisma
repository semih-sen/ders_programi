// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // License & Role Management
  role          Role      @default(USER)
  isActivated   Boolean   @default(false)
  isBanned      Boolean   @default(false)
  banReason     String?   // Banlanma sebebini tutacak opsiyonel metin alanı
  adminNotes    String?   @db.Text // Admin notları - özel durumlar, ek bilgiler vb.
  
  // Onboarding & Preferences
  hasCompletedOnboarding Boolean   @default(false)
  uygulamaGrubu         String?
  anatomiGrubu          String?
  yemekhaneEklensin     Boolean   @default(false)
  classYear             Int?
  language              Language?
  secmeliDers           String?   // Seçmeli ders tercihi (1, 2, 3, 1-2, 1-3, 2-3 vb.)
  hasYearlySynced       Boolean   @default(false)  // Yıllık senkronizasyon yapıldı mı?
  
  // Relation to the license key they used
  activatedKey  LicenseKey?
  
  // Relation to course preferences
  courseSubscriptions UserCourseSubscription[]
  
  // Payment Status
  paymentStatus       PaymentStatus @default(UNPAID)
  
  // Financial transactions
  transactions        Transaction[]
  
  // Audit logs (Admin actions)
  auditLogs           AuditLog[]
  
  // Activity logs (User actions tracking)
  activities          ActivityLog[]
  
  // Notification Settings
  notificationOffset  Int @default(15)  // Standart dersler için dakika
  firstLessonOffset   Int @default(45)  // Günün ilk dersi için dakika
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text // Encrypted refresh token
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  refresh_token_expires_in Int?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model LicenseKey {
  id        String   @id // Custom 'TAK-...' string
  createdAt DateTime @default(now())
  isUsed    Boolean  @default(false)
  
  // Relation to the user who activated this key
  activatedByUserId String?  @unique
  activatedByUser   User?    @relation(fields: [activatedByUserId], references: [id])
}

// Available courses for users to subscribe to
model Course {
  id    String @id @default(cuid())
  name  String @unique // e.g., "Fizyoloji", "Anatomi", "Histoloji"
  
  userSubscriptions UserCourseSubscription[]
}

// Join table for user course preferences
model UserCourseSubscription {
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId   String
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  notifications  Boolean  @default(true)
  addToCalendar  Boolean  @default(true)
  
  @@id([userId, courseId])
}

enum Role {
  USER
  ADMIN
}

// FOR FUTURE USE
enum Language {
  TR
  EN
}

enum TransactionType {
  INCOME  // Gelir
  EXPENSE // Gider
  TRANSFER // Hesaplar arası virman
  DISTRIBUTION // Kâr dağıtımı (para çıkışı)
}

enum TransactionStatus {
  COMPLETED // Tamamlandı (Ödendi/Tahsil Edildi) - Kasayı etkiler
  PENDING   // Bekliyor (Borç/Alacak) - Kasayı henüz etkilemez
}

enum PaymentStatus {
  UNPAID  // Ödenmedi
  PAID    // Ödendi
  FREE    // Ücretsiz/Burslu
}

model Transaction {
  id          String            @id @default(cuid())
  amount      Float             // Tutar (Ondalıklı olabilir)
  type        TransactionType   // Gelir/Gider/Transfer/Distribution
  status      TransactionStatus @default(COMPLETED) // Durum: Tamamlandı veya Bekliyor
  category    String            // Örn: "Lisans Satışı", "Sunucu Kirası", "Hayır İşi"
  description String?           @db.Text // Açıklama (opsiyonel)
  date        DateTime          @default(now())

  // Hesap ilişkisi (zorunlu)
  accountId   String
  account     FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  // Transfer işlemlerinde karşı hesabı tutmak için (opsiyonel)
  relatedAccountId String?

  // İlişkili kullanıcı (eğer bu bir kullanıcı ödemesiyse)
  userId      String?
  user        User?           @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime        @default(now())
}

// Çoklu Kasa/Hesap modeli
model FinancialAccount {
  id           String        @id @default(cuid())
  name         String        // Örn: "Nakit Kasa", "Garanti Bankası", "Semih Cep"
  type         String        // Örn: "CASH", "BANK", "PERSONAL"
  balance      Float         @default(0) // Anlık bakiye

  // İlişki
  transactions Transaction[]

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model AuditLog {
  id          String   @id @default(cuid())
  action      String   // Örn: "USER_BANNED", "LICENSE_GENERATED", "MONEY_COLLECTED"
  entityId    String?  // Etkilenen nesnenin ID'si (örn: Silinen kullanıcının ID'si)
  details     String?  @db.Text // Detaylı açıklama veya JSON string
  createdAt   DateTime @default(now())
  
  // İşlemi yapan admin
  adminId     String
  admin       User     @relation(fields: [adminId], references: [id], onDelete: Cascade)
}

// System-wide settings - Key-Value store for configuration and timestamps
model SystemSetting {
  key       String   @id // Örn: "LAST_SYNC_START", "MAINTENANCE_MODE"
  value     String   // ISO Date String veya başka değerler
  updatedAt DateTime @updatedAt // Otomatik güncellenir
}

// Activity Log - High-volume user activity tracking
model ActivityLog {
  id          String   @id @default(cuid())
  userId      String?  // Optional - captures guest traffic or link to User if logged in
  action      String   // e.g., "LOGIN", "PAGE_VIEW", "BUTTON_CLICK"
  details     String?  // e.g., "/dashboard", "Clicked 'Sync Calendar'"
  ipAddress   String?  // IPv4/IPv6
  userAgent   String?  @db.Text // Browser/Device info
  createdAt   DateTime @default(now())
  
  // Relation to User (optional)
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}
